/* set image width cookie for desktop*/
@media screen and (min-width:762px){
body{background-image:url('transparent.gif?mw=large');}

}
/* set image width cookie for tablet*/
@media screen and (min-width:360px) and (max-width:761px) {
body{background-image:url('transparent.gif?mw=medium');}
}
/* set image width cookie for smartphones*/
@media screen and (min-width:0px) and (max-width:359px) {
body{background-image:url('transparent.gif?mw=small');}
} 


